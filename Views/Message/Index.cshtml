@model IEnumerable<cmsSystem.Models.Message>

@{
    ViewData["Title"] = "Medelanen";
}

<h1>Meddelanden</h1>
<!--
<p>
    <a asp-action="Create">Create New</a>
</p> -->
<table class="table">
    <thead>
        <tr>
            <th>
               Namn:
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MessageText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
               Datum:
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
                 @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td title="@Html.Raw(item.MessageText)">
            @if (item.MessageText.Length >= 50)
                {
                    @Html.Raw(item.MessageText.Substring(0, 50))
                }
                else
                {
                @Html.Raw(item.MessageText) //"Html Raw" Gör så att inte html taggar skrivs ut
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id"><img src="~/icons/file.png" class="icon" alt="knapp för att se detaljer"/></a> 
                <a asp-action="Delete" asp-route-id="@item.Id"><img src="~/icons/delete.png" class="icon" alt="knapp för radering"/></a>
            </td>
        </tr>
}
    </tbody>
</table>
