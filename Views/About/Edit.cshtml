@model cmsSystem.Models.About

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>About</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="AboutTitle" class="control-label"></label>
                <input asp-for="AboutTitle" class="form-control" />
                <span asp-validation-for="AboutTitle" class="text-danger"></span>
            </div>
              <div class="form-outline mb-4">
      <label class="form-label" asp-for="AboutText"></label>
      <div>
        <textarea asp-for="AboutText" class="form-control"></textarea>
        <span asp-validation-for="AboutText" class="text-danger"></span>
      </div>
  </div>
            <div class="form-group">
                <label asp-for="AboutImage"></label><br>
                 <img decoding="async" src="@("~/imageupload/"+Model.AboutImage)" alt="uppladdad bild" asp-append-version="true" width="250" height="200"/><br><br>
                <input asp-for="AboutImage" accept="image/*" class="form-control" /> 
                <span asp-validation-for="AboutImage" class="text-danger"></span> 
            </div><br>
                                    <br>
            <div class="form-group">
                <label asp-for="AboutFile"class="control-label"></label>
                <input asp-for="AboutFile" accept="image/*" class="form-control" />
                <span asp-validation-for="AboutFile" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="AltText" class="control-label"></label>
                <input asp-for="AltText" class="form-control" />
                <span asp-validation-for="AltText" class="text-danger"></span>
            </div><br>
            <div class="form-group">
                <input type="submit" value="Spara" class="btn btn-primary" /> <br>
            </div>
        </form>
    </div>
</div>
<br>
<div>
    <a asp-action="Index">Tillbaka</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
         <script>
           tinymce.init({
            forced_root_block: false,
               selector: 'textarea#AboutText',
               entity_encoding : "raw"
               
           });
       </script>
}
