    ViewData["Title"] = "Visa inneh√•ll | Om Oss";
}

<div>
    <h4>Om-Oss</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AboutTitle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AboutTitle)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AboutText)
        </dt>
