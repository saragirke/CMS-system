@model IEnumerable<cmsSystem.Models.About>

@{
    ViewData["Title"] = "Om Oss";
}

<h1>Om oss</h1>
<p>
  <a asp-action="Create"><img src="~/icons/add.png" class="icon" alt="knapp för att lägga till nyhet"/>  Lägg till innehåll </a>

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AboutTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AboutText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AboutImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AltText)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AboutTitle)
            </td>
            <td>
            @if (item.AboutText.Length >= 50)
                {
                    @Html.Raw(item.AboutText.Substring(0, 50))
                }
                else
                {
                @Html.Raw(item.AboutText) //"Html Raw" Gör så att inte html taggar skrivs ut
                }
            </td>
            <td>
                  <img decoding="async" src="@("~/imageupload/"+item.AboutImage)" alt="Miniatyr av uppladdad bild" asp-append-version="true"  width="80" height="60"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AltText)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"><img src="~/icons/change.png" class="icon" alt="knapp för redigering"/></a> 
                <a asp-action="Details" asp-route-id="@item.Id"><img src="~/icons/file.png" class="icon" alt="knapp för att se detaljer"/></a> 
                <a asp-action="Delete" asp-route-id="@item.Id"><img src="~/icons/delete.png" class="icon" alt="knapp för radering"/></a>
            </td>
        </tr>
}
    </tbody>
</table>
